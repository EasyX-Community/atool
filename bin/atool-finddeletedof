#!/usr/bin/env sh

# DELETE ALL LOGS AND BACKUP LOGS

echo""
echo "--------------- ‚è≤  Clearing ALL logs ---------------"
echo ""

sudo lsof | grep 'deleted'

echo""
echo "--------------- ‚è≤  Processes with open deleted files ---------------"
echo ""

PROCSTOKILL=$(sudo lsof | grep 'deleted' | awk 'BEGIN { ORS=" " }; {print $2}')

echo "${PROCSTOKILL}"

echo ""
echo "--------------- üíØ DONE: ALL logs cleared ---------------"
echo ""

