#!/usr/bin/env sh

# DELETE ALL LOGS AND BACKUP LOGS

echo "--------------- ‚è≤  Clearing logs... ---------------"

# Clear logs.
find /var/log/ -type f -name "*.log*" -execdir truncate --size=0 {} \;

echo "--------------- ‚è≤  Deleting .gz log files... ---------------"

# Delete .gz files.
find /var/log/ -type f -regex ".*\.gz$" -delete

echo "--------------- üíØ DONE: logs cleared ... ---------------"


