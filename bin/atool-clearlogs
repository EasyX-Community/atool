#!/usr/bin/env sh

# DELETE ALL LOGS AND BACKUP LOGS

echo""
echo "--------------- â²  Clearing logs ---------------"
echo ""

# Clear logs.
find /var/log/ -type f -name "*.log*" -execdir truncate --size=0 {} \ -prune -not -empty;

echo ""
echo "--------------- â²  Deleting .gz log files ---------------"
echo ""

# Delete .gz files.
find /var/log/ -type f -regex ".*\.gz$" -delete 2>/dev/null

echo ""
echo "--------------- ðŸ’¯ DONE: logs cleared ---------------"
echo ""

