#!/usr/bin/env sh

# DELETE ALL LOGS AND BACKUP LOGS

echo""
echo "--------------- â²  Clearing ALL logs ---------------"
echo ""

# Clear logs.
find / -type f -name "*.log*" -execdir truncate --size=0 {} + 2>/dev/null ;

echo ""
echo "--------------- ðŸ’¯ DONE: ALL logs cleared ---------------"
echo ""

