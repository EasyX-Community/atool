#!/usr/bin/env sh

# DELETE ALL LOGS AND BACKUP LOGS

echo""
echo "--------------- ‚è≤  Clearing logs ---------------"
echo ""

# Clear logs.
find /var/log/ -type f -prune -not -empty -name "*.log*" -execdir truncate --size=0 {} \ ;

echo ""
echo "--------------- ‚è≤  Deleting .gz log files ---------------"
echo ""

# Delete .gz files.
find /var/log/ -type f -regex ".*\.gz$" -delete -prune 

echo ""
echo "--------------- üíØ DONE: logs cleared ---------------"
echo ""

