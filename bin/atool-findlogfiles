#!/usr/bin/env bash

# DELETE ALL LOGS AND BACKUP LOGS

ATOOL_FSIZE=${1}

if [[ -n "${ATOOL_FSIZE}" ]] ; then
  ATOOL_ADDFSIZE="-size ${ATOOL_FSIZE} "
else
  ATOOL_ADDFSIZE=""
fi

echo""
echo "--------------- ⏲  Finding Log Files ---------------"
echo ""

find / -type f -prune -not -empty ${ATOOL_ADDFSIZE}-name "*.log*" -exec du -sh {} + 2>/dev/null

echo ""
echo "--------------- 💯 DONE ---------------"
echo ""

