#!/usr/bin/env sh

# DELETE ALL LOGS AND BACKUP LOGS

echo""
echo "--------------- â²  Clearing SYSTEM logs ---------------"
echo ""

# Clear logs.
find /var/log/ -type f -name "*.log*" -execdir truncate --size=0 {} + 2>/dev/null ;

echo ""
echo "--------------- â²  Deleting .gz log files ---------------"
echo ""

# Delete .gz files.
find /var/log/ -type f -regex ".*\.gz$" -delete 2>/dev/null

echo ""
echo "--------------- â²  Deleting .journal files ---------------"
echo ""

find / -type f -name "*.journal" -delete + 2>/dev/null ;
service systemd-journald restart

echo ""
echo "--------------- ðŸ’¯ DONE: SYSTEM logs cleared ---------------"
echo ""

