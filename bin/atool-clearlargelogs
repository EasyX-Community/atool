#!/usr/bin/env sh

# DELETE ALL LOGS AND BACKUP LOGS

echo""
echo "--------------- â²  Clearing logs (${1}) ---------------"
echo ""

# Clear logs.
find / -type f -name "*.log*" -size ${1} -execdir truncate --size=0 {} + 2>/dev/null ;

echo ""
echo "--------------- ðŸ’¯ DONE: ALL logs cleared ---------------"
echo ""

